<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ExecutiveMember">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/misson"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="5dp"
                android:text="@string/misson_details"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/Overview"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="5dp"
                android:text="@string/Overview_details"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/Information"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingMultiplier="1"
                android:lineSpacingExtra="5dp"
                android:text="@string/Information_details"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/Date"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/Date_details"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/Call"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/Call_details"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/Email"
                android:textColor="@color/colorAccent" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="10dp"
                android:background="#dddddd" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/Email_details"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/app_bar_home" />
</RelativeLayout>
